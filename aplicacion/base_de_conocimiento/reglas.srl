
rule "Regla1" priority=0
	context ActividadAgricola $actividadAgricola
	if $actividadAgricola->pendiente->porcentaje >= 5 && $actividadAgricola->estadoClima == "lluvioso" && $actividadAgricola->cultivo->ciclo=="largo"
	then 
		$actividadAgricola->practicaAgricola->nombre="Barreras_Vivas";
		echo '<p>regla1 agricola</p>';
		
	end

